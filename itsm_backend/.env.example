# ==============================================================================
# ITSM Backend Environment Variables
# ==============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# IMPORTANT: .env contains sensitive credentials - NEVER commit to git!
# ==============================================================================

# Django Settings
DJANGO_SECRET_KEY=django-insecure-dev-key-change-in-production-itsm-backend-2024
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database - Microsoft SQL Server
DB_ENGINE=mssql
DB_NAME=ITSM
DB_USER=sa
DB_PASSWORD=Temp@12345
DB_HOST=localhost
DB_PORT=1433
DB_DRIVER=ODBC Driver 18 for SQL Server

# Rate Limiting (optional - these are the defaults)
# RATE_LIMIT_AUTH_LOGIN=10/m
# RATE_LIMIT_AUTH_REGISTER=5/m
# RATE_LIMIT_AUTH_REFRESH=30/m
# RATE_LIMIT_TICKET_CREATE=30/m
# RATE_LIMIT_TICKET_UPDATE=60/m
# RATE_LIMIT_EMAIL_INGEST=60/m
# RATE_LIMIT_ATTACHMENT_UPLOAD=20/m

# Logging
LOG_LEVEL=INFO
