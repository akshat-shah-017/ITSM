# ==============================================================================
# ITSM Backend Environment Variables
# ==============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# IMPORTANT: .env contains sensitive credentials - NEVER commit to git!
# ==============================================================================

# Django Settings
# REQUIRED in production (DEBUG=False) - generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Origins (comma-separated list of allowed frontend URLs)
# Development default: http://localhost:5173
# Production example: https://app.yourcompany.com,https://admin.yourcompany.com
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Database - Microsoft SQL Server
DB_ENGINE=mssql
DB_NAME=ITSM
DB_USER=sa
DB_PASSWORD=your-database-password-here
DB_HOST=localhost
DB_PORT=1433
DB_DRIVER=ODBC Driver 18 for SQL Server

# Rate Limiting (optional - these are the defaults)
# RATE_LIMIT_AUTH_LOGIN=10/m
# RATE_LIMIT_AUTH_REGISTER=5/m
# RATE_LIMIT_AUTH_REFRESH=30/m
# RATE_LIMIT_TICKET_CREATE=30/m
# RATE_LIMIT_TICKET_UPDATE=60/m
# RATE_LIMIT_EMAIL_INGEST=60/m
# RATE_LIMIT_ATTACHMENT_UPLOAD=20/m

# Logging
LOG_LEVEL=INFO

# ==============================================================================
# Azure AD / Microsoft Entra ID (OPTIONAL - for SSO)
# ==============================================================================
# Uncomment and fill these when you have Azure AD credentials
# See accounts/azure_ad.py for implementation
# 
# AZURE_AD_CLIENT_ID=your-azure-app-client-id
# AZURE_AD_CLIENT_SECRET=your-azure-app-client-secret
# AZURE_AD_TENANT_ID=your-azure-tenant-id
# AZURE_AD_REDIRECT_URI=http://localhost:5003/api/auth/azure/callback/
# FRONTEND_URL=http://localhost:5173
